#!/bin/sh

cd $HOME/gene-sequencing

# This script is a convenience script to automatically set the correct
# classpath for the IPL given the location of a IPL installation,
# specified in the $IPL_HOME environment variable.

# Run ...
# Note: this requires Java 6

NORMAL=
SPECIAL=

while [ $# -gt 0 ]
do

        HEADER=`echo $1 | sed 's/\(..\).*/\1/'`

        case "$HEADER" in
        -D)
                SPECIAL="$SPECIAL $1"
                ;;
        *)
                NORMAL="$NORMAL $1"
                ;;
        esac
        shift
done

module unload java
module load java/ibm/1.6

for i in {1..32} ; do

java -Xmx4000M -cp neobio/lib/*:external/*:lib/* -Dlog4j.configuration=file:log4j.properties $SPECIAL geneSequencing.Dsearch $NORMAL&

done


wait
