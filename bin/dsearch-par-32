#!/bin/sh

cd $HOME/gene-sequencing

module unload java
module load java/ibm/1.6

#SERVER_ADDRESS_FILE=/tmp/server.address

#./bin/ipl-server --hub-only --port 0 --hub-addresses $1 --hub-address-file $SERVER_ADDRESS_FILE&

ulimit -n 8000

NORMAL=
SPECIAL=

while [ $# -gt 0 ]
do

        HEADER=`echo $1 | sed 's/\(..\).*/\1/'`

        case "$HEADER" in
        -D)
                SPECIAL="$SPECIAL $1"
                ;;
        *)
                NORMAL="$NORMAL $1"
                ;;
        esac
        shift
done


for i in {1..32} ; do

java -Xmx8000M -cp neobio/lib/*:external/*:lib/* -Dlog4j.configuration=file:log4j.properties $SPECIAL geneSequencing.Dsearch $NORMAL&

done


wait
